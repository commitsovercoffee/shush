{
  "manifest_version": 2,
  "name": "Shush",
  "version": "1.0",
  "description": "A minimal website blocker.",
  "author": "Sourav Singh",
  "browser_action": {
    "browser_style": false,
    "default_area": "navbar",
    "default_title": "Shush",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/logo.svg",
      "32": "assets/logo.svg",
      "48": "assets/logo.svg",
      "64": "assets/logo.svg"
    }
  },
  "icons": {
    "16": "assets/logo.svg",
    "32": "assets/logo.svg",
    "48": "assets/logo.svg",
    "64": "assets/logo.svg",
    "96": "assets/logo.svg",
    "128": "assets/logo.svg"
  },
  "permissions": [
    "tabs",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "downloads"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "web_accessible_resources": ["blocked.html"]
}
